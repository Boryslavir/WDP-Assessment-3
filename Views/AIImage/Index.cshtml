@model IEnumerable<WDP_Assessment_3.Models.AIImage>
    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<IdentityUser> SignInManager

        @{
        ViewData["Title"] = "Create";
        }

        @if (SignInManager.IsSignedIn(User))
        {
        <div class="d-flex flex-column align-items-center" id="body-prompt">
            <h2>Upload AI Images</h2>
            <a asp-area="" asp-controller="AIImage" asp-action="Create">Click here to upload a new AI image</a>
        </div>
        }
        else
        {
        <div class="d-flex flex-column align-items-center" id="body-prompt">
            <h2>Upload AI Images</h2>
            <p>
                Please
                <a asp-area="Identity" asp-page="/Account/Login">login</a>
                or
                <a asp-area="Identity" asp-page="/Account/Register">register</a>
                to upload your AI images
            </p>
        </div>
        }
